<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cbox.dev"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cbox.dev.DevActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cbox.dev.engine.app.media.youtube.YouTubeAPIDemoActivity"
            android:label="@string/youtube_api_demo" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="@string/isLaunchableActivity"
                android:value="false" />
        </activity>
        <activity
            android:name="com.cbox.dev.engine.app.media.youtube.VideoWallDemoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/videowall_demo_name"
            android:screenOrientation="landscape"
            android:theme="@style/BlackNoBarsTheme" >
            <meta-data
                android:name="@string/minVersion"
                android:value="11" />
            <meta-data
                android:name="@string/isLaunchableActivity"
                android:value="true" />
        </activity>
        <activity
            android:name="com.cbox.dev.engine.app.media.youtube.VideoListDemoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/videolist_demo_name" >
            <meta-data
                android:name="@string/minVersion"
                android:value="13" />
            <meta-data
                android:name="@string/isLaunchableActivity"
                android:value="true" />
        </activity>
        <activity
            android:name="com.cbox.dev.engine.app.media.youtube.PlayerViewDemoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/playerview_demo_name"
            android:screenOrientation="nosensor" >
            <meta-data
                android:name="@string/minVersion"
                android:value="8" />
            <meta-data
                android:name="@string/isLaunchableActivity"
                android:value="true" />
        </activity>
        <activity
            android:name="com.cbox.dev.engine.app.media.youtube.FragmentDemoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/fragment_demo_name"
            android:screenOrientation="nosensor" >
            <meta-data
                android:name="@string/minVersion"
                android:value="11" />
            <meta-data
                android:name="@string/isLaunchableActivity"
                android:value="true" />
        </activity>
        <activity
            android:name="com.cbox.dev.engine.app.media.youtube.PlayerControlsDemoActivity"
            android:label="@string/player_controls_demo_name"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="@string/minVersion"
                android:value="8" />
            <meta-data
                android:name="@string/isLaunchableActivity"
                android:value="true" />
        </activity>
        <activity
            android:name="com.cbox.dev.engine.app.media.youtube.FullscreenDemoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/fullscreen_demo_name"
            android:screenOrientation="sensor"
            android:theme="@style/BlackNoTitleBarTheme" >
            <meta-data
                android:name="@string/minVersion"
                android:value="8" />
            <meta-data
                android:name="@string/isLaunchableActivity"
                android:value="true" />
        </activity>
        <activity
            android:name="com.cbox.dev.engine.app.media.youtube.ActionBarDemoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/action_bar_demo_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/OverlayActionBarTheme" >
            <meta-data
                android:name="@string/minVersion"
                android:value="11" />
            <meta-data
                android:name="@string/isLaunchableActivity"
                android:value="true" />
        </activity>
        <activity
            android:name="com.cbox.dev.engine.app.media.youtube.StandalonePlayerDemoActivity"
            android:label="@string/standalone_player_demo_name" >
            <meta-data
                android:name="@string/minVersion"
                android:value="8" />
            <meta-data
                android:name="@string/isLaunchableActivity"
                android:value="true" />
        </activity>
        <activity
            android:name="com.cbox.dev.engine.app.media.youtube.IntentsDemoActivity"
            android:label="@string/intents_demo_name" >
            <meta-data
                android:name="@string/minVersion"
                android:value="8" />
            <meta-data
                android:name="@string/isLaunchableActivity"
                android:value="true" />
        </activity>
    </application>

</manifest>